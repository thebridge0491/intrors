[workspace]

[package]
name = "dummy"
version = "0.1.0"
description = """
Dummy package to fetch/build dependencies for Makefile
"""

exclude = ["target/**/*", "build/**/*", "**/*~"]
#include = ["resources/**/*", "**/doc/*", "**/*.rs", "Cargo.toml"]

[dependencies]
libc = ">=0.2"
num = ">=0.1"
itertools = ">=0.4"
log = ">=0.3"
rust-ini = ">=0.9"

quickcheck = ">=0.3"

pkg-config = ">=0.3"
{{#executable}}
env_logger = ">=0.3"
log4rs = { version = ">=0.4", features = ["toml"] }
argparse = ">=0.2"
getopts = ">=0.2"
regex = ">=0.1"
chrono = ">=0.2"
rand = ">=0.3"
serde_json = ">=0.8"
toml = ">=0.2"
yaml-rust = ">=0.3"
{{/executable}}

[lib]
#name = "dummy"
path = "lib_dummy.rs"
#crate-type = ["lib"] # ["rlib", "dylib", "staticlib"]
